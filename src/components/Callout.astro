---
const { type = 'info', title } = Astro.props;

const styles = {
  info: 'border-blue-500 bg-blue-900/20',
  warning: 'border-yellow-500 bg-yellow-900/20',
  danger: 'border-red-500 bg-red-900/20',
  success: 'border-emerald-500 bg-emerald-900/20',
  vuln: 'border-red-500 bg-red-900/20',
  fix: 'border-emerald-500 bg-emerald-900/20',
};
---

<div class={`border-l-4 p-4 my-6 rounded ${styles[type] || styles.info}`}>
  {title && <div class="font-bold font-mono mb-2 text-sm">[{type.toUpperCase()}] {title}</div>}
  <slot />
</div>
