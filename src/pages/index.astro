---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Fetch and sort posts by date
const allWriteups = await getCollection('writeups');
const allResearch = await getCollection('research');

const sortedWriteups = allWriteups.sort((a, b) => 
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

const sortedResearch = allResearch.sort((a, b) => 
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

const recentPosts = [
  ...sortedWriteups.slice(0, 3).map(post => ({ ...post, type: 'writeup' })),
  ...sortedResearch.slice(0, 3).map(post => ({ ...post, type: 'research' }))
].sort((a, b) => 
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
).slice(0, 6);
---

<Layout>
  <div class="min-h-screen bg-slate-950">
    <!-- Hero Section -->
    <header class="max-w-5xl mx-auto px-6 py-20">
      <h1 class="text-6xl font-bold text-slate-100 mb-4 font-mono tracking-tight">
        Security Research
      </h1>
      <p class="text-xl text-slate-400 max-w-2xl leading-relaxed">
        Technical writeups, vulnerability research, and security methodology. 
        Targeting MS/PhD programs in cybersecurity with rigorous analysis and reproducible exploits.
      </p>
      <div class="mt-8 flex gap-4">
        <a href="/research" class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white font-mono text-sm rounded transition-colors">
          View Research
        </a>
        <a href="/about" class="px-4 py-2 border border-slate-600 hover:border-slate-500 text-slate-300 font-mono text-sm rounded transition-colors">
          About
        </a>
      </div>
    </header>

    <!-- Recent Posts -->
    {recentPosts.length > 0 && (
      <section class="max-w-5xl mx-auto px-6 pb-16">
        <h2 class="text-3xl font-bold text-slate-100 mb-8 font-mono">Recent Posts</h2>
        <div class="grid gap-6">
          {recentPosts.map((post) => {
            const url = post.type === 'writeup' 
              ? `/writeups/${post.slug}` 
              : `/research/${post.slug}`;
            
            return (
              <article class="border border-slate-800 rounded p-6 hover:border-slate-600 hover:bg-slate-900/50 transition-all">
                <div class="flex items-start justify-between gap-4">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-3 mb-3">
                      <span class="text-xs font-mono text-emerald-400 uppercase tracking-wider">
                        {post.type === 'writeup' ? post.data.platform : 'Research'}
                      </span>
                      <time class="text-xs font-mono text-slate-500">
                        {post.data.pubDate.toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric'
                        })}
                      </time>
                    </div>
                    <a href={url} class="block">
                      <h3 class="text-xl font-bold text-slate-100 mb-2 hover:text-blue-400 transition-colors font-mono">
                        {post.data.title}
                      </h3>
                    </a>
                    <p class="text-slate-400 line-clamp-2">
                      {post.data.description}
                    </p>
                  </div>
                  {post.type === 'writeup' && post.data.difficulty && (
                    <span class="px-3 py-1 text-xs font-mono text-slate-300 bg-slate-800 rounded whitespace-nowrap">
                      {post.data.difficulty}
                    </span>
                  )}
                </div>
                {post.data.tags && (
                  <div class="flex flex-wrap gap-2 mt-4">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="text-xs font-mono text-slate-400 hover:text-slate-300">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}
              </article>
            );
          })}
        </div>
      </section>
    )}

    <!-- Writeups Section -->
    {sortedWriteups.length > 0 && (
      <section id="writeups" class="max-w-5xl mx-auto px-6 pb-16">
        <h2 class="text-3xl font-bold text-slate-100 mb-8 font-mono">All Writeups ({sortedWriteups.length})</h2>
        <div class="space-y-4">
          {sortedWriteups.map((post) => (
            <article class="border-l-4 border-slate-700 hover:border-emerald-400 pl-4 py-3 transition-colors">
              <a href={`/writeups/${post.slug}`} class="block hover:opacity-80">
                <h3 class="text-lg font-mono font-bold text-slate-100 mb-1">
                  {post.data.title}
                </h3>
              </a>
              <div class="flex items-center gap-3 text-xs font-mono text-slate-500">
                <span>{post.data.platform}</span>
                {post.data.difficulty && (
                  <>
                    <span>•</span>
                    <span>{post.data.difficulty}</span>
                  </>
                )}
                <span>•</span>
                <time>
                  {post.data.pubDate.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric' 
                  })}
                </time>
              </div>
            </article>
          ))}
        </div>
      </section>
    )}

    <!-- Research Section -->
    {sortedResearch.length > 0 && (
      <section id="research" class="max-w-5xl mx-auto px-6 pb-20">
        <h2 class="text-3xl font-bold text-slate-100 mb-8 font-mono">Research ({sortedResearch.length})</h2>
        <div class="space-y-4">
          {sortedResearch.map((post) => (
            <article class="border-l-4 border-slate-700 hover:border-blue-400 pl-4 py-3 transition-colors">
              <a href={`/research/${post.slug}`} class="block hover:opacity-80">
                <h3 class="text-lg font-mono font-bold text-slate-100 mb-1">
                  {post.data.title}
                </h3>
              </a>
              <div class="flex items-center gap-3 text-xs font-mono text-slate-500">
                {post.data.cve && <span>CVE-{post.data.cve.split('-').pop()}</span>}
                <span>•</span>
                <time>
                  {post.data.pubDate.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric' 
                  })}
                </time>
              </div>
            </article>
          ))}
        </div>
      </section>
    )}

    <!-- Footer -->
    <footer class="border-t border-slate-800 mt-16 py-8">
      <div class="max-w-5xl mx-auto px-6 text-center text-slate-500 text-sm font-mono">
        <p>© 2025 GIKI Security Research | Running Astro</p>
      </div>
    </footer>
  </div>
